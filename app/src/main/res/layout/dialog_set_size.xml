<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog_set_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textview_set_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:maxLines="1"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio_group_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_0_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0째" />

        <RadioButton
            android:id="@+id/radio_90_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90째" />

        <RadioButton
            android:id="@+id/radio_180_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180째" />

        <RadioButton
            android:id="@+id/radio_270_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="270째" />
    </RadioGroup>

</LinearLayout>