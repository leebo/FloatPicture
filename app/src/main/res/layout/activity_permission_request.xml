<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_permission_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permission_status_checking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_grant_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grant_overlay_permission"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_grant_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grant_storage_permission"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_enter_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_app"
        android:visibility="gone"/>

</LinearLayout>
